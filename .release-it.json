{
  "git": {
    "commitMessage": "chore: release v${version}",
    "requireCleanWorkingDir": true,
    "requireUpstream": true,
    "tagName": "v${version}",
    "tagAnnotation": "Release v${version}"
  },
  "github": {
    "release": true,
    "releaseName": "Release v${version}"
  },
  "npm": {
    "publish": false
  },
  "hooks": {
    "before:init": ["git pull origin main"]
  }
}

